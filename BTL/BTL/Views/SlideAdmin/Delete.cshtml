@model BTL.Models.Slide

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Slide</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên slide
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSlide)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            @{
                var ImagePath = "~/wwwroot/images/slides/" + Model.HinhAnh;
            }
            <img id="output" class="img-rounded" alt="Ảnh" width="180" height="200" src="@Url.Content(ImagePath)" /><br />
            @Html.DisplayFor(model => model.HinhAnh)
        </dd>

        <dt>
            Trạng thái
        </dt>

        <dd>
            @if (Model.TrangThai == true)
            {
                <p>Hiển thị</p>
            }
            else
            {
                <p>Ẩn</p>
            }
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger btn-sm" /> 
            @Html.ActionLink("Trở lại", "Index", null, htmlAttributes: new { @class = "btn btn-success btn-sm" })
        </div>
    }
</div>
