@model PagedList.IPagedList<BTL.Models.TaiKhoan>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<h2 style="text-align:center">Quản lý tài khoản</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create", null, htmlAttributes: new { @class = "btn btn-success btn-sm" })
</p>
<table class="table">
    <tr style="border:1px">
        <th>
            Email
        </th>
        <th>
            Họ tên
        </th>
        <th>
            Mật khẩu
        </th>
        <th>
            Loại tài khoản
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="border:1px">
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiTaiKhoan)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
            </td>
        </tr>
    }

</table>


<div align="center">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
</div>