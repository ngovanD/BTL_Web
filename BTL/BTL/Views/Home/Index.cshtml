@{
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    ViewBag.Title = "Home Page";
}

@using BTL.Models

@{
    var listSlide = ViewBag.listSlide as List<Slide>;
    var listLoaiSanPham = ViewBag.listLoaiSanPham as List<LoaiSanPham>;
}

@foreach (var item in listSlide)
{

    <div class="slideShow" style="padding-top: 40%; background: url(@Url.Content("~/wwwroot/images/slides/" + item.HinhAnh)) top center/cover no-repeat;">

    </div>
}

<div id="list-sanPham">
    @foreach (var item in listLoaiSanPham)
    {
        <div class="sanPham">
            <a href="@Url.Action("TrangTheoTungSanPham", "LoaiSanPham", new {maLoaiSanPham = @item.MaLoaiSanPham})"><img src="~/wwwroot/images/loaisanpham/@item.HinhAnh" alt="iPhone" class="sanPham-img sanPham-km-img"></a>
            <a href="@Url.Action("TrangTheoTungSanPham", "LoaiSanPham", new {maLoaiSanPham = @item.MaLoaiSanPham})" class="text-sanPham">@item.TenLoaiSanPham</a>
        </div>
    }
    <div class="clear"></div>
</div>
<div id="slider" style="background: url(@Url.Content("~/wwwroot/images/Desktop-Ưu-dãi-nhân-viên-2048x939.png")) top center/cover no-repeat;">
