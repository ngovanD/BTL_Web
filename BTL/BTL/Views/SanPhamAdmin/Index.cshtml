@model IEnumerable<BTL.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Quản lý  sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create")
</p>
<table class="table">
    <tr style="border:1px">
        <th>
            Tên loại sản phẩm
        </th>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Ngày cập nhập
        </th>
        <th>
            Hình ảnh
        </th>
    </tr>

@foreach (var item in Model) {
    <tr style="border:1px">
        <td>
            @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoaiSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSanPham)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayTao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayCapNhat)
        </td>
        <td>
            @{
                string ImagePath = "~/wwwroot/images/sanpham/" + item.HinhAnh;
            }
            <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
            <br>
            @Html.DisplayFor(modelItem => item.HinhAnh)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaSanPham }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaSanPham }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaSanPham })
        </td>
    </tr>
}

</table>
