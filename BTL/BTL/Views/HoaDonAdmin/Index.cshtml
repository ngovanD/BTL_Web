@model PagedList.IPagedList<BTL.Models.HoaDon>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<h2 style="text-align:center">Quản lý hóa đơn</h2>

<table class="table">
    <tr>
        <th>
            Tên khách hàng
        </th>
        <th>
            Tổng Tiền
        </th>
        <th>
            Ngày lập hóa đơn
        </th>
        <th>
            Trạng thái
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ThongTinLienHe_KhachHang.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayLapHoaDon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaHoaDon }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaHoaDon }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
                @Html.ActionLink("Chi Tiết", "Details", new { id = item.MaHoaDon }, htmlAttributes: new { @class = "btn btn-success btn-sm" })
            </td>
        </tr>
    }

</table>

<br />
<div align="center">
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }))
</div>
