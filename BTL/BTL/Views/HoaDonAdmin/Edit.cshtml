@model BTL.Models.HoaDon

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Chỉnh sửa hoa đơn</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaHoaDon)

    <div class="form-group">
        <div>Mã thông tin khách hàng:</div>
        <div class="col-md-10">
            <input type="text" name="MaHoaDon" value="@Model.MaHoaDon" class="form-control" disabled/>
        </div>
    </div>
    <div class="form-group">
        <div>Họ tên khách hàng:</div>
        <div class="col-md-10">
            <input type="text" name="HoTen" value="@ViewBag.ThongTinKhachHang.HoTen" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div>Số điện thoại:</div>
        <div class="col-md-10">
            <input type="text" name="SoDienThoai" value="@ViewBag.ThongTinKhachHang.SoDienThoai" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div>Địa chỉ giao:</div>
        <div class="col-md-10">
            <input type="text" name="DiaChi" value="@ViewBag.ThongTinKhachHang.DiaChi" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div>Ghi chú:</div>
        <div class="col-md-10">
            <input type="text" name="GhiChu" value="@ViewBag.ThongTinKhachHang.GhiChu" class="form-control" />
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" style="border-radius:8px" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}