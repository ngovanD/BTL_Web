@model IEnumerable<BTL.Models.LoaiSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Quản lý loại sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo Mới", "Create")
</p>
<table class="table" border="1">
    <tr style="border:1px">
        <th style="border:1px">
            Tên loại sản phẩm
        </th>
        <th style="border:1px">
            Hình ảnh
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="border:1px">
            <td >
                @Html.DisplayFor(modelItem => item.TenLoaiSanPham)
            </td>
            <td >
                @{
                    string ImagePath = "~/wwwroot/images/loaisanpham/" + item.HinhAnh;
                }
                <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
                <br>
                @Html.DisplayFor(modelItem => item.HinhAnh)
            </td>
            <td >
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaLoaiSanPham }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoaiSanPham })
            </td>
        </tr>
    }

</table>
